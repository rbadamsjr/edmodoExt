{
  "manifest_version": 2,


  "name": "Edmodo Message Extension",
  "description": "This extension will allow us to send messages",
  "version": "0.1",

  "browser_action": {
  "default_icon": "icon.png",
  "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
