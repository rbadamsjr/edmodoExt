{
  "manifest_version": 2,
  "name": "Edmodo Message Extension",
  "description": "This extension will allow us to send messages",
  "version": "0.1.1",
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
